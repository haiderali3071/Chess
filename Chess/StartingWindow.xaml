<Window x:Class="Chess.StartingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="Game Mode" Height="362.382" Width="777.033">
    <Grid>
        <Label Content="Select Game Mode?" HorizontalAlignment="Left" Margin="83,31,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
        <RadioButton x:Name="hvh" Content="Human vs Human" HorizontalAlignment="Left" Margin="123,115,0,0" VerticalAlignment="Top" FontSize="25"/>
        <RadioButton x:Name="hvc" Content="Human vs Computer"  IsChecked="true" HorizontalAlignment="Left" Margin="123,155,0,0" VerticalAlignment="Top" FontSize="25"/>
        <RadioButton x:Name="cvh" Content="Computer vs Human" HorizontalAlignment="Left" Margin="123,195,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Button Content="Play Game" HorizontalAlignment="Left" Margin="308,257,0,0" VerticalAlignment="Top" Width="192" Height="46" FontSize="25" Click="Button_Click" Background="#FF93A7EC" Foreground="White"/>
    </Grid>
</Window>
